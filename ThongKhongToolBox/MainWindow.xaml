<Window x:Class="ThongKhongToolBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ThongKhongToolBox"
        Height="600" Width="1000"
        MinWidth="600" MinHeight="550"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResize"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        UseLayoutRounding="True">

    <Window.Resources>
        <LinearGradientBrush x:Key="MainBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF232526" Offset="0"/>
            <GradientStop Color="#FF414345" Offset="1"/>
        </LinearGradientBrush>

        <DropShadowEffect x:Key="CardShadow"
                      BlurRadius="18"
                      ShadowDepth="0"
                      Color="#80000000"/>

        <Style x:Key="FancyButton" TargetType="Button">
            <Setter Property="Background" Value="#FF00FF90"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    CornerRadius="20"
                    SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF07FFAA"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10"
                                      ShadowDepth="0"
                                      Color="#FF07FFAA"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="MenuColumn" Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border x:Name="toolsMenuBorder"
            Grid.Column="0"
            CornerRadius="20"
            Background="#FF2E2E30">
            <StackPanel Margin="10">
                <TextBlock Text="TOOLS"
                   Foreground="White"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>
                <ListBox x:Name="ToolListBox"
                 SelectedIndex="0"
                 SelectionChanged="ToolListBox_SelectionChanged"
                 Background="Transparent"
                 BorderThickness="0"
                 Foreground="White">
                    <ListBoxItem Content="Home"         Tag="Home"/>
                    <ListBoxItem Content="Formatter"    Tag="Formatter"/>
                    <ListBoxItem Content="Button Tool"  Tag="ButtonTool"/>
                </ListBox>
            </StackPanel>
        </Border>

        <Border Grid.Column="1"
            CornerRadius="20"
            Padding="10"
            Background="{DynamicResource MainBackground}">
            <Grid>

                <Border x:Name="ResizeBorder"
                BorderThickness="8"
                BorderBrush="Transparent"
                Background="Transparent"
                MouseDown="ResizeBorder_MouseDown"
                MouseMove="ResizeBorder_MouseMove"
                MouseLeave="ResizeBorder_MouseLeave"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

                <Frame x:Name="ToolHost"
                   NavigationUIVisibility="Hidden"
                   Background="Transparent"/>

                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,1,12,0">
                    <Button x:Name="MinimizeButton"
                  Content="–"
                  Width="32" Height="32"
                  FontSize="18"
                  Foreground="#FF232526"
                  Background="#FFCCCCCC"
                  BorderThickness="0"
                  Cursor="Hand"
                  Click="MinimizeButton_Click"
                  Style="{StaticResource FancyButton}"
                  Margin="0,0,4,0"/>
                    <Button x:Name="MaxRestoreButton"
                  Content="☐"
                  Width="32" Height="32"
                  FontSize="20"
                  Foreground="#FF232526"
                  Background="#FFCCCCCC"
                  BorderThickness="0"
                  Cursor="Hand"
                  Click="MaxRestoreButton_Click"
                  Style="{StaticResource FancyButton}"
                  Margin="0,0,4,0"/>
                    <Button x:Name="CloseButton"
                  Content="✕"
                  Width="32" Height="32"
                  FontSize="18"
                  Foreground="#FF232526"
                  Background="#FFCCCCCC"
                  BorderThickness="0"
                  Cursor="Hand"
                  Click="CloseButton_Click"
                  Style="{StaticResource FancyButton}"
                  Margin="0,0,4,0"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>