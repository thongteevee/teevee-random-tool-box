<Page x:Class="ThongKhongToolBox.Views.FormatterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Date and SSN formatter"
      Background="Transparent">

    <Grid Background="{DynamicResource MainBackground}">
        <Border Margin="40"
            CornerRadius="20"
            Background="White"
            Effect="{StaticResource CardShadow}">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Viewbox Grid.Row="0" Grid.ColumnSpan="2" Margin="0,10,0,2">
                    <Label Content="Date and SSN formatter"
                 FontSize="24"
                 FontWeight="UltraBold"
                 Foreground="#FF07FFAA"
                 FontFamily="Segoe UI Semibold"/>
                </Viewbox>

                <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
                </StackPanel>

                <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,18,0,-9">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="/Images/icon.png"
                         Stretch="Uniform"
                         Margin="0,0,16,0"
                         MinWidth="50"
                         MaxWidth="100"
                    />

                    <Border Grid.Column="1"
                  CornerRadius="12"
                  Padding="10"
                  Background="#F7F7F7"
                  Effect="{StaticResource CardShadow}"
                  VerticalAlignment="Center">
                        <StackPanel>

                            <Button x:Name="BtnSelectFile"
                      Content="Select Excel File"
                      MinWidth="120"
                      Height="40"
                      Click="BtnSelectFile_Click"
                      Style="{StaticResource FancyButton}"/>

                            <Label x:Name="LabelFileName"
                     Content="No file selected"
                     Margin="5,10,0,0"
                     Foreground="#FF888888"/>

                            <Button x:Name="BtnProcessFile"
                      Content="Process &amp; Format"
                      MinWidth="120"
                      Height="40"
                      Click="BtnProcessFile_Click"
                      Style="{StaticResource FancyButton}"/>

                            <ProgressBar x:Name="ProgressBar"
                           Height="20"
                           Margin="0,10,0,0"
                           Minimum="0"
                           Maximum="100"
                           Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <StackPanel Grid.Row="3" Grid.ColumnSpan="2">
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>